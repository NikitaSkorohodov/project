<h1>{{__ 'card'}}</h1>

<div id="card">
  {{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>{{__ 'title'}}</th>
        <th>{{__ 'quantity'}}</th>
        <th>{{__ 'Actions'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btm-small js-remove" data-id="{{id}}">{{__ 'delete'}}</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>{{__ 'Price'}}:</strong> <span class="price">{{price}}</span></p>
  {{else}}
  <p>{{__ 'Cart is empty'}}</p>
  {{/if}}
</div>
